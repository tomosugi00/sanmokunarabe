<Page
    x:Class="Sanmoku.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="600" Width="480">

    <Grid>
        <TextBlock x:Name="TurnLabel"
                   VerticalAlignment="Top" HorizontalAlignment="Left" Margin="40,20"
                   Height="30" Width="300"
                   TextWrapping="Wrap"
                   Text=""/>

        <TextBlock x:Name="WinnerLabel"
                   VerticalAlignment="Top" HorizontalAlignment="Left" Margin="40,60" 
                   Height="30" Width="300"
                   TextWrapping="Wrap"
                   Text=""/>

        <Button x:Name="RetryButton" Content="やり直し"
                Margin="340,510,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"
                Height="30" Width="100" Click="RetryButton_Click"/>

        <Grid x:Name="BoardGrid"
              Margin="40,100,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"
              Height="400" Width="400"
              />

    </Grid>
</Page>
